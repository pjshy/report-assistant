{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./lib",
    "typeRoots": [
      "node_modules/@types"
    ],

    "importHelpers": false,
    "newLine": "LF",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,

    "noEmitHelpers": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "server/**/*.ts",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
